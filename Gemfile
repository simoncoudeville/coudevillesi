# ~/Gemfile

source "http://rubygems.org"
ruby "2.0.0"

group :development do

	# CSS Preprocessing
	gem 'sass', "~> 3.2"
	gem 'compass'
	gem 'modular-scale', "~> 1.0.6"
	gem 'jekyll'

	# Guard Specific
	gem 'guard'
	gem 'guard-compass'
	gem 'guard-jekyll'
	gem 'guard-jekyll-plus'
	gem 'guard-livereload'

	# Faster LiveReload
	gem 'yajl-ruby'
end
